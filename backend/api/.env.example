# ============================================
# VideoSat Backend API - Environment Variables
# ============================================
# Bu dosyayı .env olarak kopyalayın ve gerçek değerleri girin
# cp .env.example .env

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
IVS_REGION=us-east-1

# ============================================
# DynamoDB Configuration
# ============================================
USE_DYNAMODB=true
DYNAMODB_TABLE_USERS=basvideo-users
DYNAMODB_TABLE_ROOMS=basvideo-rooms
DYNAMODB_TABLE_CHANNELS=basvideo-channels
DYNAMODB_TABLE_PAYMENTS=basvideo-payments

# ============================================
# Agora Configuration (Live Streaming)
# ============================================
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
STREAM_PROVIDER=AGORA

# ============================================
# AWS IVS Configuration (Alternative Streaming)
# ============================================
AWS_IVS_STREAM_KEY=sk_us-east-1_your_stream_key_here
AWS_IVS_PLAYBACK_URL=https://your_playback_url_here
AWS_IVS_CHANNEL_ID=your_channel_id_here
AWS_IVS_ENDPOINT=rtmps://your_endpoint_here

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Email Configuration
# ============================================
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@basvideo.com
EMAIL_FROM_NAME=VideoSat

# ============================================
# Push Notification Configuration
# ============================================
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@basvideo.com

# ============================================
# Admin Configuration
# ============================================
ADMIN_TOKEN=your_admin_token_here

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=https://basvideo.com,https://www.basvideo.com,http://localhost:3000,http://localhost:8080

# ============================================
# Security
# ============================================
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FILE=backend.log

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
